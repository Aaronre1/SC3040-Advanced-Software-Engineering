@page
@model ASE3040.Web.Pages.ToDoItems.DeleteModel

@{
    ViewData["Title"] = "Delete ToDo Item";
}

<h1>Are you sure you want to delete this item?</h1>

<div>
    <strong>Title:</strong>
    @Model.ToDoItem.Title
</div>

<form method="post">
    <input type="submit" value="Confirm Delete" class="btn btn-danger" />
</form>

<a asp-page="Index">Cancel and go back to list</a>
