@page
@model ASE3040.Web.Pages.TodoItem.EditModel

@{
    ViewData["Title"] = "Edit ToDo Item";
}

<h1>Edit ToDo Item</h1>

<form method="post">
    <input type="hidden" asp-for="Command.Id" />

    <div class="form-group">
        <label asp-for="Command.Title" class="control-label"></label>
        <input asp-for="Command.Title" class="form-control" />
        <span asp-validation-for="Command.Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Command.Note" class="control-label"></label>
        <textarea asp-for="Command.Note" class="form-control"></textarea>
        <span asp-validation-for="Command.Note" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Command.Done" class="control-label"></label>
        <input asp-for="Command.Done" type="checkbox" class="form-check-input" />
        <span asp-validation-for="Command.Done" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Command.DateTime" class="control-label"></label>
        <input asp-for="Command.DateTime" type="datetime-local" class="form-control" />
        <span asp-validation-for="Command.DateTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Update" class="btn btn-primary" />
    </div>
</form>


