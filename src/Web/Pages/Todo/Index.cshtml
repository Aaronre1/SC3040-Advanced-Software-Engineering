@page
@model IndexModel

@{
    ViewData["Title"] = "To Do List";
}
<h1>To Do List</h1>
<!-- Begin Page Content -->
<div class="container-fluid">
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">

            <h3>Create To Do List </h3>
                <div class="row">
                    <div class="col-md-4">
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Title" class="control-label"></label>
                                <input asp-for="Title" class="form-control" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>

        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>@Html.DisplayNameFor(model => model.ToDoLists[0].Title)</th>
                            <th>@Html.DisplayNameFor(model => model.ToDoLists[0].Items)</th>
                            <th>Changes</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Date</th>
                            <th>@Html.DisplayNameFor(model => model.ToDoLists[0].Title)</th>
                            <th>@Html.DisplayNameFor(model => model.ToDoLists[0].Items)</th>
                            <th>Changes</th>
                        </tr>
                    </tfoot>
                    <tbody>
                    @foreach (var item in Model.ToDoLists)
                    {
                        <tr>
                            <th>28 September 2023</th>
                            <td>@Html.DisplayFor(modelItem => item.Title)</td>
                            <td>@Html.DisplayFor(modelItem => item.Items.Count)</td>
                            <td style="text-align: center;">
                                <a asp-page="./Edit" asp-route-id="@item.Id"><i class="fa fa-pen icon"></i> </a>
                                | <a asp-page="./Details" asp-route-id="@item.Id"><i class="fa fa-duotone fa-list"></i></a>
                                | <a asp-page="./Delete" asp-route-id="@item.Id"><i class="fa fa-trash icon"></i></a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>