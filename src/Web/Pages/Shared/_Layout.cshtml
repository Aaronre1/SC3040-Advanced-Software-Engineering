<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Travel Planner</title>
    <link rel="shortcut icon" type="image/x-icon" href="favicon.ico"/>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" asp-append-version="true"/>
        <link rel="stylesheet" href="~/lib/vendor/fontawesome-free/css/all.css" asp-append-version="true"/>
        <link rel="stylesheet" href="~/lib/vendor/datatables/dataTables.bootstrap4.css" asp-append-version="true"/>
        <link rel="stylesheet" href="~/css/sb-admin-2.css" asp-append-version="true"/>
    </environment>

    <environment exclude="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true"/>
        <link rel="stylesheet" href="~/lib/vendor/fontawesome-free/css/all.min.css" asp-append-version="true"/>
        <link rel="stylesheet" href="~/lib/vendor/datatables/dataTables.bootstrap4.min.css" asp-append-version="true"/>
        <link rel="stylesheet" href="~/css/sb-admin-2.min.css" asp-append-version="true"/>
    </environment>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
</head>
<body>

<nav class="navbar navbar-expand-md navbar-dark bg-primary" aria-label="Navbar">
    <div class="container-fluid">
        <a class="navbar-brand d-flex align-items-center justify-content-center" asp-page="/Index">
            <div class="sidebar-brand-icon rotate-n-15">
                <i class="fas fa-laugh-wink"></i>
            </div>
            <div class="sidebar-brand-text mx-3">Travel Planner</div>
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbar">
            <ul class="navbar-nav me-auto mb-2 mb-sm-0">
                <li class="nav-item">
                    <a class="nav-link" asp-page="/Itinerary/Index">Itinerary</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-page="/Calender/Index">Calendar</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-page="/AttractionView/Index">Attraction</a>
                </li>
            </ul>
            <hr class="bg-white text-white border-white"/>
            <partial name="_LoginPartial"/>
        </div>
    </div>
</nav>

<main role="main" class="p-3">
    <div class="container-xxl">
        @RenderBody()
    </div>
</main>

<environment include="Development">
    <script src="~/lib/jquery/dist/jquery.js" asp-append-version="true"></script>
    <script src="~/lib/vendor/jquery-easing/jquery.easing.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js" asp-append-version="true"></script>
    <script src="~/js/sb-admin-2.js" asp-append-version="true"></script>
    <script src="~/lib/vendor/datatables/jquery.dataTables.js" asp-append-version="true"></script>
    <script src="~/lib/vendor/datatables/dataTables.bootstrap4.js" asp-append-version="true"></script>
</environment>

<environment exclude="Development">
    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/vendor/jquery-easing/jquery.easing.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/js/sb-admin-2.min.js" asp-append-version="true"></script>
    <script src="~/lib/vendor/datatables/jquery.dataTables.min.js" asp-append-version="true"></script>
    <script src="~/lib/vendor/datatables/dataTables.bootstrap4.min.js" asp-append-version="true"></script>
</environment>

<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>